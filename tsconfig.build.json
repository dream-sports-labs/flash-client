{
  "extends": "./tsconfig",
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,
    "stripInternal": true
  },
  "exclude": [
    "example",
    "lib",
    "**/__tests__",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__mocks__",
    "jest"
  ]
}
